<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_CreateCourse"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:padding="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_Avatar_CreateCourse"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/resource_default"
                android:contentDescription="Avatar"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/rounded_border_img"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/edt_CourseName_CreateCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Tên khóa học"
                android:inputType="text"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/img_Avatar_CreateCourse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/edt_Description_CreateCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Mô tả khóa học"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:maxLines="6"
                android:gravity="top"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/edt_CourseName_CreateCourse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/ll_IsPrivate_CreateCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/edt_Description_CreateCourse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khóa học riêng tư"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <Switch
                    android:id="@+id/swt_IsPrivate_CreateCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_CreateCourse_CreateCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tạo khóa học"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_rectagle"
                app:layout_constraintTop_toBottomOf="@id/ll_IsPrivate_CreateCourse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
