<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_Avatar_MemInfo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/resource_default"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/round_img"
                android:contentDescription="Avatar"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/tv_Name_MemInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/Primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_Type_MemInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học sinh"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_Email_MemInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textSize="16sp"
                android:textColor="@color/dark_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
