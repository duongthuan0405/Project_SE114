<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Avatar + Tên khóa học + Riêng tư -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/btn_rectagle"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_CourseAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/resource_default"
                android:background="@drawable/btn_rectagle"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_CourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lập trình Android cơ bản"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_IsPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riêng tư: Có"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tv_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📌 Mô tả khóa học"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_DescriptionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khóa học dành cho người mới bắt đầu học lập trình Android."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/btn_rectagle"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Host ID -->
        <TextView
            android:id="@+id/tv_HostID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Host ID: abc123"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách thành viên -->
        <TextView
            android:id="@+id/tv_MembersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📚 Danh sách thành viên"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/lv_Members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@color/white"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical" />
    </LinearLayout>
</ScrollView>
