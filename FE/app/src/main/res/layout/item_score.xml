<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_Avatar_ScoreItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/resource_default"
            app:shapeAppearanceOverlay="@style/round_img"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar"
            android:layout_marginEnd="12dp" />

        <!-- Tên học sinh -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Name_ScoreItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Đình Hoàng Quân"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Primary" />
        </LinearLayout>

        <!-- Điểm số -->
        <TextView
            android:id="@+id/tv_Score_ScoreItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
